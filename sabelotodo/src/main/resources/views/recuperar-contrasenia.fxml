<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="350.0" prefWidth="400.0" stylesheets="@../style/style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="es.franciscorodalf.sabelotodo.frontend.controller.RecuperarContraseniaController">

    <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" prefWidth="300.0" spacing="15.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
        
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Recuperar Contraseña" />

        <TextField fx:id="usernameField" maxWidth="250.0" promptText="Nombre de usuario" />
        <TextField fx:id="emailField" maxWidth="250.0" promptText="Correo electrónico" />

        <Label fx:id="infoLabel" maxWidth="250.0" visible="false" wrapText="true" />

        <Button maxWidth="250.0" onAction="#handleEnviarCorreo" text="Continuar" />
        <Button maxWidth="250.0" onAction="#handleVolverLogin" text="Volver al login" />
    </VBox>
</AnchorPane>
