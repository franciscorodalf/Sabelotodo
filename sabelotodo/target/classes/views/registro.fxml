<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="454.0" prefWidth="400.0" styleClass="register-pane" stylesheets="@../style/style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="es.franciscorodalf.sabelotodo.frontend.controller.RegistroController">

    <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" prefWidth="300.0" spacing="15.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
        
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Registro de Usuario" />
        
        <TextField fx:id="usernameField" maxWidth="250.0" promptText="Nombre de usuario" />
        
        <TextField fx:id="emailField" maxWidth="250.0" promptText="Correo electrónico" />

        <PasswordField fx:id="passwordField" maxWidth="250.0" promptText="Contraseña" />

        <PasswordField fx:id="confirmPasswordField" maxWidth="250.0" promptText="Confirmar contraseña" />

<Label fx:id="infoLabel" textFill="red" visible="false" />

        <Button maxWidth="250.0" onAction="#handleRegistrar" text="Registrar" />
        
        <Button maxWidth="250.0" onAction="#handleVolverLogin" text="Volver al login" />

    </VBox>
</AnchorPane>
